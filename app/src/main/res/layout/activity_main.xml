<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#15000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-150dp"
        android:layout_marginStart="-150dp"/>

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar Matematika Jadi Seru!"
        android:textColor="#555555"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.14"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/circle_button" />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/settings"
                android:layout_gravity="center"
                app:tint="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <ImageButton
                android:id="@+id/btn_info"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="@color/grey" />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/info"
                android:layout_gravity="center"
                app:tint="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_peringkat"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/circle_button"
                android:backgroundTint="#FFD700" />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_gravity="center"
                app:tint="@color/black"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo! Masukkan namamu:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/name_card_view"
        app:layout_constraintStart_toStartOf="@+id/name_card_view"
        app:layout_constraintEnd_toEndOf="@+id/name_card_view"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/name_card_view"
        android:layout_width="307dp"
        android:layout_height="54dp"
        app:cardCornerRadius="27dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:backgroundTint="@color/white"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/colorPrimary"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Masukan Nama"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/name_card_btn"
        android:layout_width="307dp"
        android:layout_height="60dp"
        app:cardCornerRadius="27dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_card_view"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mulai"
            android:layout_width="308dp"
            android:layout_height="match_parent"
            android:text="Mulai Bermain"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            app:cornerRadius="30dp"
            app:elevation="6dp" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/particle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>